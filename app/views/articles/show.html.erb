<article class="article-detail my-4 p-4 rounded">
  <h1 class="article-detail-title"><%= @article.title %></h1>
  <%= content_tag(:div, fa_icon('calendar', text: 'Created at: ' + @article.created_at.strftime('%b-%d-%Y')), class: 'py-2') %>
  <div class="article-detail-body py-2">
    <%= @article.body %>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to 'Edit Article', edit_article_path(@article), class: "btn btn-primary btn-lg btn-block" %>
    </div>
    <div class="col">
      <%= link_to 'Delete Article', article_path(@article), method: :delete,
      data: {confirm: 'Are you sure you want to delete the article?'},
      class: "btn btn-danger btn-lg btn-block" %>
    </div>
  </div>
</article>

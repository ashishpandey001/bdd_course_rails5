<% flash.each do |key, value| %>
  <div class="text-center alert alert-<%= (key == 'success' || key == 'notice') ? 'success' : 'danger' %> alert-dismissable fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= value %>
  </div>
<% end %>
